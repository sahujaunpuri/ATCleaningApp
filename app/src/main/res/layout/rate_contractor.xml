<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<ProgressBar
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerInParent="true"
    android:id="@+id/progressBar"
    android:visibility="gone"
    />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rate And Review Contractor"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/text"
            android:background="@color/coral_blue"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:id="@+id/card_completion"
            android:layout_below="@id/text"
            android:layout_marginTop="16dp"

            android:elevation="9dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blackA">
                <professional.service.corporate.com.atcleaningapp.CircleImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"

                    android:id="@+id/circleView"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Work Completed For"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="8dp"
                    android:id="@+id/work"
                    android:layout_toRightOf="@+id/circleView"
                    android:background="@color/blackD"
                    android:gravity="center|left"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Title goes Here"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/circleView"
                    android:id="@+id/title_of_project"
                    android:layout_below="@+id/work"
                    android:gravity="center|left|top"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Contractor Name"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="8dp"
                    android:id="@+id/total"
                    android:layout_below="@+id/title_of_project"
                    android:background="@color/blackD"
                    android:gravity="center|left"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Title goes Here"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="8dp"
                    android:textSize="24dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/name"
                    android:layout_below="@+id/total"
                    android:gravity="center|left|top"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:id="@+id/text_select"
                    android:text="Select Rating"
                    android:gravity="center|left"
                    android:paddingLeft="8dp"
                    android:background="@color/blackD"
                    android:layout_below="@+id/name"
                    android:textColor="#FFFFFF"/>
                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1.0"
                    android:layout_toRightOf="@+id/text_select"
                    android:layout_below="@+id/name"
                    android:theme="@style/RatingBar"
                     />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/feedback_text"
                    android:textColor="#FFFFFF"
                    android:text="Write A Feedback"
                    android:background="@color/blackD"
                    android:layout_marginTop="32dp"
                    android:paddingLeft="8dp"
                    android:layout_below="@+id/text_select"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/feedback"
                    android:background="@drawable/custom_edittext"
                    android:layout_below="@+id/feedback_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Done"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="8dp"
                    android:id="@+id/done_request"
                    android:textSize="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/feedback"
                    android:background="#008080"
                    android:gravity="center"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>