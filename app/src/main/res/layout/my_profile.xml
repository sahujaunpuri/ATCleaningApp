<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#c96f53"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/progressBar"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/card1"
        android:elevation="9dp"
        app:cardCornerRadius="9dp"
        android:background="@drawable/my_profile_gradient"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/my_profile_gradient"

            >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:gravity="center"
    android:id="@+id/img">

        <professional.service.corporate.com.atcleaningapp.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/profile_img"
            android:layout_gravity="center"
            android:src="@drawable/patient_male"
            />
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#bdbdbd"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_below="@+id/img">

            <TextView
                android:id="@+id/profile_holder"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:gravity="center"

                android:text="Name Goes Here"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="9dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="9dp"
    android:layout_below="@+id/card1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/my_profile_gradient_2">
 <TextView
     android:layout_width="match_parent"
     android:layout_height="50dp"
     android:text="Email"
     android:gravity="center"
     android:textStyle="bold"
     android:textSize="18dp"
     android:id="@+id/email_tv"
     android:textColor="#FFFFFF"
   />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center"

            android:textSize="18dp"
            android:id="@+id/email"

            android:layout_below="@+id/email_tv"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Mobile No"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/mobile_tv"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/email"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center"

            android:textSize="18dp"
            android:id="@+id/mobile"

            android:layout_below="@+id/mobile_tv"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Address"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/address_tv"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/mobile"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/update"
            android:textColor="#FFFFFF"
            android:src="@drawable/location_marker"
            android:gravity="center"
            android:layout_below="@+id/mobile"
            android:layout_toRightOf="@+id/address_tv"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"

            android:textSize="18dp"
            android:id="@+id/address"

            android:layout_below="@+id/address_tv"/>



        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/edit"
            android:text="Edit Profile"

            android:layout_marginTop="48dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_below="@+id/address"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button3"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>
</ScrollView>