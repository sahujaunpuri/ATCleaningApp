<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="contractors.freelancer.client.product.com.freelancer.CurrentLocationDialog" >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/location_marker"
        android:id="@+id/location"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Your Current Location"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold|italic"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/location"
        android:id="@+id/loc1"
        />
    <TextView
        android:id="@+id/tvLatlong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/red1"
        android:textStyle="bold|italic"
        android:layout_below="@+id/loc1"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/location"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/next_btn"
        android:text="Share Location"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_gravity="bottom"

        android:background="@drawable/custom_btn1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/location"
        android:layout_toEndOf="@+id/location"
        android:layout_marginBottom="50dp"/>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_gravity="center"
        />
</RelativeLayout>