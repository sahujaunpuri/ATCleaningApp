<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main_page"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            >


            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="ATC Cleaning App"
                android:textColor="#ffffff"

                android:textSize="24dp" />

            <TextView
                android:id="@+id/tag"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/heading"
                android:gravity="center"
                android:text="Get Your House Cleaning done at ease!"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="320dp"

                android:elevation="9dp"
                android:layout_below="@+id/tag"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                app:cardCornerRadius="12dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@drawable/background_login_portion"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:id="@+id/login_text"
                        android:textStyle="bold"
                        android:text="Login"
                        android:gravity="center"
                        android:textSize="24dp"

                        android:layout_marginLeft="16dp"
                        android:drawablePadding="16dp"
                        android:layout_marginRight="16dp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:id="@+id/email"

                         android:inputType="textEmailAddress"
                        android:backgroundTint="#DCDCDC"
                        android:layout_marginLeft="16dp"
                        android:drawablePadding="16dp"
                        android:layout_below="@+id/login_text"
                        android:layout_marginRight="16dp"
                        android:hint="Email Id"

                        android:drawableLeft="@drawable/user" />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="#DCDCDC"
                        android:id="@+id/password"
                        android:hint="Password"

                        android:layout_marginLeft="16dp"
                        android:layout_below="@+id/email"

                        android:drawablePadding="16dp"
                        android:inputType="textPassword"
                        android:drawableLeft="@drawable/password" />
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="50dp"
                        android:text="Login"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:id="@+id/login_button"
                        android:layout_below="@+id/password"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/rounded_button3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/login_button"
                        android:text="Forgot Password? Reset it Now!"
                        android:background="@color/colorAccent"
                        android:textColor="#FFFFFF"
                        android:id="@+id/reset_pass"
                        android:layout_marginTop="16dp"
                        android:gravity="center"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/progressBar"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>