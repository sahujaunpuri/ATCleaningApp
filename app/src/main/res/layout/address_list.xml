<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/card3"
    android:id="@+id/list_linear"
    android:orientation="vertical"
    android:background="@color/blackA"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_frame">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_gravity="center|center_vertical|center_horizontal"/>

            <TextView
                android:id="@+id/add_new_address"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="16dp"
                android:background="@color/coral_blue"
                android:gravity="center"
                android:text="Add Another Address"
                android:textColor="#FFFFFF" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/add_new_address"
        android:text="Select A Particular Address"
        android:background="@color/coral_blue"
        android:textColor="#FFFFFF"
        android:id="@+id/particular_address"
        android:gravity="center"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:id="@+id/address_lv"
        android:dividerHeight="5dp"
        android:listSelector="#FFFF00"
        android:layout_below="@+id/particular_address"
        android:layout_marginTop="8dp"
        ></ListView>


    <TextView
        android:id="@+id/save_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#008000"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:text="Select Address And Continue"
        android:layout_below="@+id/address_lv"
        android:textColor="#FFFFFF" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
