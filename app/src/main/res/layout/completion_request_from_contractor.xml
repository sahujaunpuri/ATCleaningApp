<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Work Completion Request By Cleaner(s)"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:id="@+id/text"
            android:background="@color/coral_blue"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/card_completion"
            android:layout_below="@id/text"
            android:layout_marginTop="16dp"

            android:elevation="9dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blackA">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Work Completed For"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="8dp"
                    android:id="@+id/work"
                    android:background="@color/blackD"
                    android:gravity="center|left"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="Title goes Here"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/title_of_project"
                    android:layout_below="@+id/work"
                    android:gravity="center|left|top"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Bid Amount"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="8dp"
                    android:id="@+id/total"
                    android:layout_below="@+id/title_of_project"
                    android:background="@color/blackD"
                    android:gravity="center|left"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Title goes Here"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/total_amt"
                    android:layout_below="@+id/total"
                    android:gravity="center|left|top"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Approve Request"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="8dp"
                    android:id="@+id/send_request"
                    android:textSize="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/total_amt"
                    android:background="#008080"
                    android:gravity="center"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>