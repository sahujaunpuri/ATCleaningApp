<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackA">
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:id="@+id/card1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff6f00"
        >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="#ff6f00"
                    android:gravity="center|left"
                    android:paddingLeft="16dp"
                    android:text="Work Title"
                    android:textColor="#FFFFFF" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/title_card"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/card1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#ffff74"
                    android:elevation="12dp"
                    app:cardCornerRadius="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffdd4b">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="top"
                            android:id="@+id/title_input"
                            android:hint="Start Tying Here!"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@+id/title_card"
                    android:id="@+id/card2">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff6f00"
                        >
                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:background="#ff6f00"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:text="Give a Few Description About the Work"
                            android:textColor="#FFFFFF" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/description_card"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/card2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#ffff74"
                    android:elevation="12dp"

                    app:cardCornerRadius="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffdd4b">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="top"
                            android:hint="Start Tying Here!"
                            android:id="@+id/description_input"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/card4"
                android:layout_below="@+id/description_card"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#e35183">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:text="Please Select Size Of The House"
                    android:textColor="#FFFFFF"

                    android:id="@+id/dropdown_text"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/spinner_size"
                    android:dropDownSelector="@color/red1"
                    android:layout_below="@+id/dropdown_text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/spinner_background"></Spinner>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/card5"
                    android:layout_below="@+id/card4"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#e35183">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:text="How Many Bathrooms"
                            android:textColor="#FFFFFF"
                            android:layout_marginLeft="8dp"
                            android:id="@+id/dropdown_bathrooms"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/spinner_bathrooms"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:dropDownSelector="@color/red1"
                            android:layout_below="@+id/dropdown_bathrooms"
                            android:background="@drawable/spinner_background"></Spinner>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:id="@+id/card6"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_below="@+id/card5"
                    android:layout_marginTop="8dp"

                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#e35183">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:text="Soil Level"
                            android:textColor="#FFFFFF"

                            android:id="@+id/soil_level_text"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:id="@+id/soil_level"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:dropDownSelector="@color/red1"
                            android:layout_below="@+id/soil_level_text"
                            android:background="@drawable/spinner_background"></Spinner>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/card7"
                    android:layout_below="@+id/card6"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/att">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#e35183"
                            android:text="Add Attachments (Optional) "
                            android:textColor="#FFFFFF"

                            android:id="@+id/attachment_text"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:weightSum="3"
                    android:layout_below="@+id/card7"
                    android:id="@+id/img_layout1"

                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/editTextName"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/imgView2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/camera_icon"  />
                    <ImageView
                        android:id="@+id/imgView3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:src="@drawable/camera_icon"  />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:weightSum="3"
                    android:layout_below="@+id/img_layout1"
                    android:id="@+id/img_layout2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgView4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_below="@+id/imgView2"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/camera_icon" />
                    <ImageView
                        android:id="@+id/imgView5"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_toRightOf="@+id/imgView4"
                        android:layout_below="@+id/imgView3"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/camera_icon"  />
                    <ImageView
                        android:id="@+id/imgView6"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_below="@+id/imgView3"
                        android:layout_toRightOf="@+id/imgView5"
                        android:src="@drawable/camera_icon"  />
                </LinearLayout>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:id="@+id/post_now"
                    android:text="Continue And Select Address"
                    android:textColor="#FFFFFF"
                    android:layout_below="@+id/img_layout2"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="32dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_horizontal"
                    android:background="@drawable/rounded_button3"/>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>


</LinearLayout>
</ScrollView>