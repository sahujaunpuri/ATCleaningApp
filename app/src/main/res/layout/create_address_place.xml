<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    android:background="@color/blackA">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical" android:layout_marginTop="8dp"

        >
        <ProgressBar
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/progressBar"
            android:visibility="gone"
            android:layout_gravity="center|center_vertical|center_horizontal"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorP"
            android:textColor="#FFFFFF"

            android:text="Building Number"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:backgroundTint="@color/colorPrimaryDark"
            android:background="@drawable/custom_edittext"
            android:id="@+id/building_no"
            android:hint="Start Typing Here!"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorP"
            android:textColor="#FFFFFF"

            android:text="Apartment Name And Street"/>
        <AutoCompleteTextView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:gravity="center|top"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:id="@+id/apartment_name"
            android:backgroundTint="@color/colorPrimaryDark"
            android:background="@drawable/custom_edittext"
            android:hint="Start Typing Here!"/>



        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorP"
            android:textColor="#FFFFFF"

            android:text="Landmark"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:id="@+id/landmark"
            android:backgroundTint="@color/colorPrimaryDark"
            android:background="@drawable/custom_edittext"
            android:hint="Start Typing Here!"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorP"
            android:textColor="#FFFFFF"

            android:text="Zip Code"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/zip_code"
            android:backgroundTint="@color/colorPrimaryDark"
            android:background="@drawable/custom_edittext"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:hint="Start Typing Here!"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            >
            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textColor="#FFFFFF"
                android:id="@+id/save_address"
                android:background="@drawable/rounded_button3"
                android:text="Save Address"
                android:layout_marginTop="32dp"

                android:layout_centerHorizontal="true"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>