<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackA">

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#d50000">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:background="#d50000"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:text="Work Title"
                            android:textColor="#FFFFFF" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/title_card"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/card1"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#ff5131"
                    android:elevation="12dp"
                    app:cardCornerRadius="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff5131">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="top"
                            android:hint="Start Tying Here!"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/title_card"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#d50000">

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:background="#d50000"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:text="Give a Few Description About the Work"
                            android:textColor="#FFFFFF" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/description_card"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/card2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#ff5131"
                    android:elevation="12dp"

                    app:cardCornerRadius="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ff5131">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="top"
                            android:hint="Start Tying Here!"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/description_card"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#d50000">

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"

                            android:background="#d50000"
                            android:gravity="center|left"
                            android:paddingLeft="16dp"
                            android:text="Select Home Address"
                            android:textColor="#FFFFFF" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <ListView
                    android:id="@+id/address_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card3"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="@android:color/transparent"
                    android:dividerHeight="2dp"></ListView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/address_lv"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/dropdown_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:background="#d50000"
                            android:text="Please Select Size Of The House"
                            android:textColor="#FFFFFF" />

                        <Spinner
                            android:id="@+id/spinner_size"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/dropdown_text"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/custom_edittext"
                            android:dropDownSelector="@color/red1"></Spinner>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/card4"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/dropdown_bathrooms"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:background="#d50000"
                            android:text="How Many Bathrooms"
                            android:textColor="#FFFFFF" />

                        <Spinner
                            android:id="@+id/spinner_bathrooms"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/dropdown_bathrooms"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/custom_edittext"
                            android:dropDownSelector="@color/red1"></Spinner>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/address_lv"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/soil_level_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:background="#d50000"
                            android:text="Soil Level"
                            android:textColor="#FFFFFF" />

                        <Spinner
                            android:id="@+id/soil_level"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@+id/soil_level_text"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/custom_edittext"
                            android:dropDownSelector="@color/red1"></Spinner>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/post_now"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/card6"
                    android:background="@drawable/rounded_button3"
                    android:gravity="center|center_horizontal"
                    android:text="Post Now"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>


</LinearLayout>