<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:elevation="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="#263238">

                <professional.service.corporate.com.atcleaningapp.CircleImageView
                    android:id="@+id/circleView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/patient_male" />

                <TextView
                    android:id="@+id/project_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/circleView"
                    android:gravity="center|left"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/post_date"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"
                    android:layout_below="@+id/project_title"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/circleView"
                    android:gravity="center|left"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/post_status"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"
                    android:layout_below="@+id/post_date"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/circleView"
                    android:gravity="center|left"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/completion_date"
                    android:layout_width="130dp"

                    android:layout_height="40dp"
                    android:layout_below="@+id/post_status"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/circleView"
                    android:gravity="center|left"
                    android:text="Estimated Deadline"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/completion_status"
                    android:layout_width="match_parent"

                    android:layout_height="40dp"
                    android:layout_below="@+id/post_status"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/completion_date"
                    android:gravity="center|left"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/completion_request"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/completion_date"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/profile_img"
                    android:background="@color/colorA"
                    android:gravity="center"
                    android:text="Work Completion Approval Not Requested Yet"
                    android:textColor="#FFFFFF" />


                <TextView
                    android:id="@+id/safe_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/completion_request"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/profile_img"
                    android:background="@color/red1"
                    android:gravity="center"

                    android:text="Pay Safe Deposit"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>